<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main">

    <!-- Cart Label and Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/blue_background">

        <TextView
            android:id="@+id/article_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Articles"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/cart_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/educational" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="120dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Article 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardBackgroundColor="@color/article">

                <LinearLayout
                    android:id="@+id/article1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Discover the LuxeVista Difference "
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hotel3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="At LuxeVista Resort, every detail is meticulously crafted to offer a perfect blend of luxury and comfort. From world-class accommodations to personalized services, we redefine the meaning of hospitality. Hereâ€™s what makes LuxeVista Resort your ultimate travel destination: Our rooms and suites are designed with sophistication and relaxation in mind. Enjoy breathtaking views of the ocean or lush gardens from your private balcony. Each accommodation is equipped with modern amenities, plush bedding, and a serene ambiance, ensuring a restful escape from the everyday hustle.  " />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Article 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/article2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redefining Relaxation"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/resort_image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imagine waking up to the soft rustle of trees, the sound of waves, or the gentle whisper of mountain breezes. At Luxe Vista Resort, we bring your dream vacation to life with unparalleled luxury and heartfelt hospitality." />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Article 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/article3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 7 Activities to Enjoy at Luxe Vista Resort"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/hotel1"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "/> </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <RelativeLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blue_background"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/bookIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:contentDescription="Book Icon"
            android:src="@drawable/educational" />

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:contentDescription="Home Icon"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:contentDescription="Cart Icon"
            android:src="@drawable/basket" />
    </RelativeLayout>
</RelativeLayout>
